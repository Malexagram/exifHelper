<Window x:Class="ExifHelper.DesktopUi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExifHelper.DesktopUi"
        mc:Ignorable="d"
        Title="MainWindow" Height="750" Width="900">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition  Width="50"></ColumnDefinition>
            <ColumnDefinition Width="800"></ColumnDefinition>
            <ColumnDefinition Width="50"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="650"></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
        </Grid.RowDefinitions>
        <Button Name="CopyPageLink" Grid.Column="1" Grid.Row="1" Click="CopyPageLink_Click" Margin="20,20,620,50" >Open Copy Image Exif</Button>
        <Button Name="ReadExifTagsLink" Grid.Column="1" Grid.Row="1" Click="ReadExifTagsLink_Click" Margin="207,20,467,50" >Read Exif Tags</Button>
        <Frame Grid.Column="1" Grid.Row="0" Name="PageFrame"></Frame>
    </Grid>
</Window>
